<p id="notice"><%= notice %></p>

<h1>Listing Actualities</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actualities.each do |actuality| %>
      <tr>
        <td><%= actuality.title %></td>
        <td><%= actuality.description %></td>
        <td><%= actuality.content %></td>
        <td><%= link_to 'Show', actuality %></td>
        <td><%= link_to 'Edit', edit_actuality_path(actuality) %></td>
        <td><%= link_to 'Destroy', actuality, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

